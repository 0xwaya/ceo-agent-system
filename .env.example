# Environment Configuration
# Copy this file to .env and update values for your environment

# Application Environment (development, testing, production)
APP_ENV=development

# Debug Mode (NEVER enable in production)
DEBUG=False

# Secret Key (MUST change in production - use strong random string)
# Generate with: python -c "import secrets; print(secrets.token_hex(64))"
SECRET_KEY=change-this-to-secure-random-string-in-production

# OpenAI API Key (REQUIRED for all LLM nodes)
# Obtain from https://platform.openai.com/api-keys
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_CODEX_ENABLED=false

# Flask Configuration
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# Logging Configuration
LOG_LEVEL=INFO

# Security Configuration
ENABLE_AUTH=False
JWT_SECRET_KEY=change-this-jwt-secret-in-production
ENABLE_RATE_LIMITING=True

# Performance Configuration
ENABLE_CACHING=True
CACHE_TYPE=simple

# Redis Configuration (if using Redis cache)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Database Configuration (future use)
DATABASE_URL=sqlite:///langraph.db

# CORS Configuration
CORS_ORIGINS=*

# Feature Flags
ENABLE_ASYNC=False
ENABLE_METRICS=False

# Guard Rail Configuration
STRICT_MODE=True
