# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf
*.pyx text eol=lf
*.pyi text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Windows scripts
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Documentation
*.md text diff=markdown
*.txt text
*.rst text
*.adoc text

# Configuration
*.json text
*.toml text
*.yaml text
*.yml text
*.xml text

# Web files
*.html text diff=html
*.css text diff=css
*.js text
*.jsx text
*.ts text
*.tsx text

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar.gz binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
*.otf binary

# Archives
*.7z binary
*.gz binary
*.tar binary
*.tgz binary

# Databases
*.db binary
*.sqlite binary
*.sqlite3 binary

# Python specific
*.pkl binary
*.pickle binary
*.pyc binary
*.pyo binary
*.pyd binary
